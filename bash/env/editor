# use the correct and avaible version of vim

vi --version &> /dev/null
if [ $? -eq 0 ]; then
    alias v="vi"
    EDITOR="vi"
    vim --version &> /dev/null

    if [ $? -eq 0 ]; then
        alias vi="vim"
        EDITOR="vim"

        gvim --version &> /dev/null
        if [ $? -eq 0 ]; then
            alias vim="gvim"
            EDITOR="gvim"
        fi
        
        mvim --version &> /dev/null
        if [ $? -eq 0 ]; then
            alias vim="mvim"
            EDITOR="mvim"
        fi
    fi
fi

export EDITOR

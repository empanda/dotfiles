# Shell Helpers
# the aliases for vim are set the in env file
alias r="reset"
alias reload=". ~/.bashrc"
alias re="reload"

# Git Helpers
alias gs="git status"
alias ga="git add"
alias gd="git diff"
alias gp="git push"
alias gl="git pull"
alias gf="git fetch"
function gc { git commit -m "$*"; }
function gca { git commit -a -m "$*"; }

# Svn Helpers
alias ss="svn status"
alias su="svn update"
alias ssu="svn status -u"
alias sa="svn add"
alias sd="svn diff"
function sc { svn commit -m "$*"; }


# Django Helpers
alias mr="./manage.py runserver"
alias mt="./manage.py test"
alias fdl="fab deploy_local"

# Homebrew Helper
# see also the brewu command in ~/bin
alias brewi="brew install -v"

# Apt helpers
alias aptu="sudo apt-get update && sudo apt-get upgrade"
alias aptdu="sudo apt-get update && sudo apt-get dist-upgrade"
